<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_manillen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manillen"
        android:textSize="32pt"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/pl_naamTeam1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Naam Team 1"
        tools:layout_editor_absoluteX="71dp"
        tools:layout_editor_absoluteY="251dp" />

    <EditText
        android:id="@+id/pl_naamTeam2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Naam Team 2"
        tools:layout_editor_absoluteX="71dp"
        tools:layout_editor_absoluteY="374dp" />

    <Button
        android:id="@+id/btn_submitNaam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="522dp" />

</android.support.constraint.ConstraintLayout>